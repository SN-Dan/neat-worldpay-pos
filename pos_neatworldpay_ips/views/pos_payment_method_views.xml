<odoo>
    <record id="pos_payment_method_view_form_inherit_neat_worldplay" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.neatworldplay</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="neat_worldplay_terminal_device_code" invisible="use_payment_terminal != 'neatworldplay'" />
                <field name="neat_worldplay_terminal_master_pwd_mock" password="True"
                       invisible="use_payment_terminal != 'neatworldplay'">
                </field>
            </xpath>
        </field>
    </record>
</odoo>