<odoo>
    <record id="pos_payment_method_view_form_inherit_neat_worldpay" model="ir.ui.view">
        <field name="name">pos.payment.method.form.inherit.neatworldpay</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_payment_terminal']" position="after">
                <field name="neat_worldpay_terminal_device_code" invisible="use_payment_terminal != 'neatworldpay'"
                                readonly="use_payment_terminal == 'neatworldpay'"/>
                <field name="neat_worldpay_terminal_master_pwd_mock" password="True"
                       invisible="use_payment_terminal != 'neatworldpay'">
                </field>
                <field name="neat_worldpay_terminal_manager_group_selection" invisible="use_payment_terminal != 'neatworldpay'"
                                required="use_payment_terminal == 'neatworldpay'"/>
                <field name="neat_worldpay_device_type" invisible="use_payment_terminal != 'neatworldpay'"
                                required="use_payment_terminal == 'neatworldpay'"/>
                <field name="neat_worldpay_is_mobile" invisible="use_payment_terminal != 'neatworldpay'"/>
                <field name="neat_worldpay_is_desktop_mode" invisible="use_payment_terminal != 'neatworldpay'"/>
                <field name="neat_worldpay_ws_url" invisible="use_payment_terminal != 'neatworldpay'" readonly="neat_worldpay_is_desktop_mode == True"/>
                <field name="neat_worldpay_ws_certificate" invisible="use_payment_terminal != 'neatworldpay'" readonly="neat_worldpay_is_desktop_mode == True"/>
                <field name="neat_worldpay_is_terminal_printer_communication_allowed" invisible="use_payment_terminal != 'neatworldpay'" readonly="neat_worldpay_is_desktop_mode == True"/>
            </xpath>
        </field>
    </record>
</odoo>